    "react-docgen-typescript-loader": "^3.3.0",
    "supertest": "^3.4.1",
    "ts-node": "8.4.1",
    "tsconfig-paths": "3.8.0",
    "typescript": "3.6.4",
    "wait-on": "^3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "git add"
    ]
  },
  "engines": {
    "node": "10"
  }
}
