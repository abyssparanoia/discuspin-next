{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start:dev": "nodemon src/run.ts",
    "start:server": "nodemon src/backend/main.ts",
    "start:prd": "NODE_ENV=production node ./dist/src/run.js",
    "build": "yarn build:next && yarn build:server",
    "build:next": "next build",
    "build:server": "tsc -b ./src/tsconfig.server.json && cp ./firebaseAdminKey.json ./dist/src/firebaseAdminKey.json",
    "lint": "eslint --fix -c ./.eslintrc.js './**/*.{ts,tsx}'",
    "storybook": "start-storybook"
  },
  "dependencies": {
    "@material-ui/core": "^4.5.2",
