    "body-parser": "1.19.0",
    "core-js": "3.4.2",
    "date-fns": "^2.6.0",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^1.7.0",
    "express": "4.17.1",
    "express-session": "1.17.0",
    "faker": "^4.1.0",
    "firebase": "7.5.0",
    "firebase-admin": "8.6.1",
